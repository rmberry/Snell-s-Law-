#include<stdlib.h>
#include<stdio.h>
#include<math.h>

/** This program will evaluate the angle of refraction
  * using Snell's Law
  * reference to Snell's Law 
  * https://en.wikipedia.org/wiki/Snell%27s_law
  */

int main(int argc, char **argv) {


  //theta1rad is the user's input angle converted into radians
  double theta1, theta2, theta1rad, index2;
  int n1 = 1;

  //the constant pi from mathematics
  const pi = 3.14159265;
  
  theta1 = atof(argv[1]);
  /*need to convert user's input in degrees to radians so
  * the math library can use it
  */
  theta1rad = theta1 * (pi / 180.0);
  index2 = atof(argv[2]);

  //making sure not to divide by zero
  if(index2 == 0) {
  printf("can't divide by zero\n");
  }

   /*if index 2 is negative that means there
   *was negative speed to calculate it which is invalid
   */
   else if(index2 < 0) {
   printf("can't have a negative speed\n");
   }

    //check to make sure the information falls into the range of the arcsine function
    else if( (( (n1 * sin(theta1rad) ) / index2) >= -1) && (( (n1 * sin(theta1rad) ) / index2 ) <= 1) ) { 
    theta2 = asin( ( (n1 * sin(theta1rad) ) / index2 ) ) * (180.0 / pi);
    printf("The refractive index calculated is: %lf\n", theta2);
    } 

     else {
  
     printf("Your input that you provided doesn't fit into the valid range of the arcsine function\n");

     } 
